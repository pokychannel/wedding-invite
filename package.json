  "bugs": {
    "url": "https://github.com/pokychannel/wedding-invite/issues"
  },
  "homepage": "https://github.com/pokychannel/wedding-invite#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.3",
    "sass": "^1.85.1"
  }
}
